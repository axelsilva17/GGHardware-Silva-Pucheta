<UserControl x:Class="GGHardware.Views.Reportes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="{DynamicResource MaterialDesignBackground}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Reportes"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">

            <!-- Tarjetas -->
            <UniformGrid Columns="3" Margin="0,0,0,20">
                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                        Padding="20"
                        Margin="10">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Finance"
                                                 Height="24"
                                                 Width="24"
                                                 Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"/>
                        <TextBlock Text="Ventas del día"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="$15.200"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"/>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                        Padding="20"
                        Margin="10">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="Box"
                                                 Height="24"
                                                 Width="24"
                                                 Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"/>
                        <TextBlock Text="Productos vendidos"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="124"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"/>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource MaterialDesignCardBackground}"
                        Padding="20"
                        Margin="10">
                    <StackPanel>
                        <materialDesign:PackIcon Kind="AccountPlus"
                                                 Height="24"
                                                 Width="24"
                                                 Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"/>
                        <TextBlock Text="Clientes nuevos"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"
                                   Margin="0,5,0,0"/>
                        <TextBlock Text="8"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Filtro -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,15">
                <TextBlock Text="Filtrar por fecha:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"
                           Foreground="{DynamicResource MaterialDesignBodyMediumBrush}"/>
                <DatePicker x:Name="dpFechaInicio"
                            Width="140"
                            Margin="0,0,10,0"/>
                <DatePicker x:Name="dpFechaFin"
                            Width="140"
                            Margin="0,0,10,0"/>
                <Button Content="Aplicar"
                        Margin="10,0,0,0"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="dgReporte"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Style="{DynamicResource MaterialDesignDataGrid}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
                    <DataGridTextColumn Header="Producto" Binding="{Binding Producto}" Width="*"/>
                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
