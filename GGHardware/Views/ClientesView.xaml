<UserControl x:Class="GGHardware.Views.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="239*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <!-- Botón volver + título -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="btnVolver"
                Content="←"
                FontSize="18"
                Width="40" Height="40"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="#1F2937"
                Cursor="Hand"
                Click="btnVolver_Click"/>

            <TextBlock Text="Gestión de Clientes"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#1F2937"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>
        </StackPanel>
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,0,20,10" PreviewTextInput="txtLetras_PreviewTextInput"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Apellido:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtApellido" Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,0,0,10" PreviewTextInput="txtLetras_PreviewTextInput"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="CUIT:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtCUIT" Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,0,20,10" PreviewTextInput="txtNumeros_PreviewTextInput"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Teléfono:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtTelefono" Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,0,0,10" PreviewTextInput="txtNumeros_PreviewTextInput"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Dirección:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtDireccion" Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,0,20,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Condición Fiscal:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <ComboBox x:Name="cmbCondicionFiscal" Grid.Row="2" Grid.Column="3" Padding="5" Margin="0,0,0,10">
                        <ComboBoxItem Content="Responsable Inscripto"/>
                        <ComboBoxItem Content="Monotributista"/>
                        <ComboBoxItem Content="Exento"/>
                        <ComboBoxItem Content="Consumidor Final"/>
                    </ComboBox>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Provincia:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtProvincia" Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,0,20,10" PreviewTextInput="txtLetras_PreviewTextInput"/>

                    <TextBlock Grid.Row="3" Grid.Column="2" Text="Localidad:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtLocalidad" Grid.Row="3" Grid.Column="3" Padding="5" Margin="0,0,0,10" PreviewTextInput="txtLetras_PreviewTextInput"/>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Limpiar"
                            Background="#9CA3AF"
                            Foreground="White"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            Padding="10,5"
                            Margin="0,0,10,0"
                            Click="btnLimpiar_Click"/>
                    <Button Content="Guardar Cliente"
                            Background="#10B981"
                            Foreground="White"
                            BorderBrush="Transparent"
                            Cursor="Hand"
                            Padding="10,5"
                            Click="btnGuardar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Padding="10" Grid.RowSpan="4">
            <DataGrid x:Name="dgClientes"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None" SelectionChanged="dgClientes_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding id_cliente}" Width="Auto"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*"/>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding apellido}" Width="*"/>
                    <DataGridTextColumn Header="CUIT" Binding="{Binding CUIT}" Width="Auto"/>
                    <DataGridTextColumn Header="Condición Fiscal" Binding="{Binding condicion_fiscal}" Width="*"/>
                    <DataGridTemplateColumn Header="Acciones" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Background="#2563EB" Foreground="White"
                                            BorderBrush="Transparent" Padding="5" Margin="0,0,5,0"/>
                                    <Button Content="Eliminar" Background="#EF4444" Foreground="White"
                                            BorderBrush="Transparent" Padding="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>