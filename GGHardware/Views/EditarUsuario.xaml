<UserControl x:Class="GGHardware.Views.EditarUsuario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="400"
             Background="{DynamicResource Background}">

    <!-- Scroll para pantallas chicas -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <!-- Contenedor principal con tarjeta -->
        <Border Background="{DynamicResource Surface}"
                CornerRadius="12"
                Margin="20"
                Padding="30"
                BorderBrush="{DynamicResource PrimaryBrush}"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <StackPanel>
                    <!-- Titulo -->
                    <TextBlock Text="Editar Usuario"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Campo DNI -->
                    <TextBlock Text="DNI" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="txtDNI" 
                             Margin="0,0,0,15"
                             materialDesign:HintAssist.Hint="DNI"
                             Background="{DynamicResource Surface}"
                             Foreground="{DynamicResource TextPrimary}"
                             BorderBrush="{DynamicResource PrimaryBrush}"
                             BorderThickness="2"
                             Padding="12,8"
                             FontSize="14">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Campo Nombre -->
                    <TextBlock Text="Nombre" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="txtNombre" 
                             Margin="0,0,0,15"
                             materialDesign:HintAssist.Hint="Nombre"
                             Background="{DynamicResource Surface}"
                             Foreground="{DynamicResource TextPrimary}"
                             BorderBrush="{DynamicResource PrimaryBrush}"
                             BorderThickness="2"
                             Padding="12,8"
                             FontSize="14">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Campo Apellido -->
                    <TextBlock Text="Apellido" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="txtApellido" 
                             Margin="0,0,0,15"
                             materialDesign:HintAssist.Hint="Apellido"
                             Background="{DynamicResource Surface}"
                             Foreground="{DynamicResource TextPrimary}"
                             BorderBrush="{DynamicResource PrimaryBrush}"
                             BorderThickness="2"
                             Padding="12,8"
                             FontSize="14">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Campo Correo -->
                    <TextBlock Text="Correo" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               Margin="0,10,0,5"/>
                    <TextBox x:Name="txtCorreo" 
                             Margin="0,0,0,15"
                             materialDesign:HintAssist.Hint="Correo"
                             Background="{DynamicResource Surface}"
                             Foreground="{DynamicResource TextPrimary}"
                             BorderBrush="{DynamicResource PrimaryBrush}"
                             BorderThickness="2"
                             Padding="12,8"
                             FontSize="14">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Campo Contrasena -->
                    <TextBlock Text="Contrasena" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               Margin="0,10,0,5"/>
                    <PasswordBox x:Name="pbContrasena" 
                                 Margin="0,0,0,15"
                                 Background="{DynamicResource Surface}"
                                 Foreground="{DynamicResource TextPrimary}"
                                 BorderBrush="{DynamicResource PrimaryBrush}"
                                 BorderThickness="2"
                                 Padding="12,8"
                                 FontSize="14">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <!-- Campo Fecha de nacimiento -->
                    <TextBlock Text="Fecha de nacimiento" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               Margin="0,10,0,5"/>
                    <DatePicker x:Name="dpFechaNacimiento" 
                                Margin="0,0,0,15"
                                Background="{DynamicResource Surface}"
                                Foreground="{DynamicResource TextPrimary}"
                                BorderBrush="{DynamicResource PrimaryBrush}"
                                BorderThickness="2"
                                Padding="12,8"
                                FontSize="14">
                        <DatePicker.Style>
                            <Style TargetType="DatePicker">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DatePicker.Style>
                    </DatePicker>

                    <!-- Campo Rol -->
                    <TextBlock Text="Rol" 
                               FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimary}" 
                               Margin="0,10,0,5"/>
                    <ComboBox x:Name="cmbRol"
                              SelectedValuePath="Tag"
                              DisplayMemberPath="Content"
                              Margin="0,0,0,25"
                              Background="{DynamicResource Surface}"
                              Foreground="{DynamicResource TextPrimary}"
                              BorderBrush="{DynamicResource PrimaryBrush}"
                              BorderThickness="2"
                              Padding="12,8"
                              FontSize="14">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                        <ComboBoxItem Content="Supervisor" Tag="1"/>
                        <ComboBoxItem Content="Usuario" Tag="2"/>
                    </ComboBox>

                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,10,0,0">
                        <Button Content="Guardar cambios"
                                Width="150"
                                Height="40"
                                Margin="5"
                                Click="btnActualizar_Click"
                                Background="{DynamicResource PrimaryBrush}"
                                Foreground="{DynamicResource PrimaryForegroundBrush}"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Cursor="Hand"/>
                        <Button Content="Volver"
                                Width="100"
                                Height="40"
                                Margin="5"
                                Click="btnVolver_Click"
                                Background="Transparent"
                                Foreground="{DynamicResource TextPrimary}"
                                BorderBrush="{DynamicResource PrimaryBrush}"
                                BorderThickness="2"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>
