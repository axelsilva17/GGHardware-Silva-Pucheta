<Window x:Class="GGHardware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GGHardware" Height="393" Width="721"
        Background="#F3F4F6" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          Color="#000000"
                          Direction="270"
                          ShadowDepth="6"
                          BlurRadius="12"
                          Opacity="0.18"/>
        <!-- Estilo para los botones del menú -->
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#93C5FD"/>
                                <!-- Azul clarito -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#60A5FA"/>
                                <!-- Azul un poco más oscuro -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
      

        <!-- Contenido principal encima -->
        <Grid Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- DockPanel superior -->
            <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Background="#1F2937">
                <TextBlock Text="GGHardware - Dashboard"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Margin="20,0"/>
            </DockPanel>

            <!-- Menú lateral -->
            <Border Grid.Row="1" Grid.Column="0" Background="#111827">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Navegación" 
                                   Foreground="#9CA3AF"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   Margin="20,20,10,10"/>
                        <Button x:Name="btnInicio" Content="🏠 Inicio" Style="{StaticResource MenuButtonStyle}" Click="btnInicio_Click"/>
                        <Button x:Name="btnProductos" Content="📦 Productos" Style="{StaticResource MenuButtonStyle}" Click="btnProductos_Click"/>
                        <Button x:Name="btnVentas" Content="🛒 Ventas" Style="{StaticResource MenuButtonStyle}" Click="btnVentas_Click"/>
                        <Button x:Name="btnRegistro" Content="👤 Registro" Style="{StaticResource MenuButtonStyle}" Click="BtnRegistro_Click"/>
                        <Button x:Name="btnReportes" Content="📊 Reportes" Style="{StaticResource MenuButtonStyle}" Click="btnReportes_Click"/>
                        <Button x:Name="btnBackup" Content="💾 Backup" Style="{StaticResource MenuButtonStyle}" Click="btnBackup_Click"/>
                        <Button x:Name="btnConfiguracion" Content="⚙️ Configuración" Style="{StaticResource MenuButtonStyle}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Panel dinámico -->
            <Border x:Name="MainContentBorder" Grid.Row="1" Grid.Column="1" Background="#DBEAFE" CornerRadius="10" Margin="15"
                    BorderBrush="#E5E7EB" BorderThickness="1" 
                    Effect="{StaticResource DropShadow}"/>

            <!-- Footer -->
            <DockPanel Grid.Row="2" Grid.ColumnSpan="2" Background="#2563EB">
                <TextBlock Text="© 2025 GGHardware | Todos los derechos reservados"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="20,0"/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>
