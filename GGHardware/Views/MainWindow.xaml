<Window x:Class="GGHardware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="GGHardware" Height="393" Width="721"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="Segoe UI">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Barra superior -->
        <DockPanel Grid.Row="0" Grid.ColumnSpan="2"
                   Background="{DynamicResource PrimaryBrush}"
                   materialDesign:ElevationAssist.Elevation="Dp6">
            <TextBlock Text="GGHardware - Dashboard"
                       Foreground="{DynamicResource PrimaryForegroundBrush}"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="20,0"/>
        </DockPanel>

        <!-- Menú lateral -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="{DynamicResource MaterialDesignPaper}"
                x:Name="mainMenuBorder">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="mainMenu">
                    <TextBlock Text="Navegación"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="20,20,10,10"/>

                    <Button x:Name="btnInicio"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Click="btnInicio_Click"
                            Foreground="{DynamicResource PrimaryBrush}"
                            HorizontalContentAlignment="Left"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Home" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Inicio"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnProductos"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Click="btnProductos_Click"
                            Foreground="{DynamicResource PrimaryBrush}"
                            HorizontalContentAlignment="Left"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="PackageVariantClosed" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Productos"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnVentas"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Click="btnVentas_Click"
                            Foreground="{DynamicResource PrimaryBrush}"
                            HorizontalContentAlignment="Left"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Cart" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Ventas"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnRegistro"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Click="BtnRegistro_Click"
                            Foreground="{DynamicResource PrimaryBrush}"
                            HorizontalContentAlignment="Left"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Account" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Registro"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnReportes"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Click="btnReportes_Click"
                            Foreground="{DynamicResource PrimaryBrush}"
                            HorizontalContentAlignment="Left"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="ChartBar" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Reportes"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnBackup"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Click="btnBackup_Click"
                            Foreground="{DynamicResource PrimaryBrush}"
                            HorizontalContentAlignment="Left"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Database" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Backup"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="btnConfiguracion"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Foreground="{DynamicResource PrimaryBrush}"
                            HorizontalContentAlignment="Left"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Cog" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Configuración"/>
                        </StackPanel>
                    </Button>

                    <!-- Botón Modo Oscuro -->
                    <Button x:Name="btnModoOscuro"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Click="ToggleTheme_Click"
                            Foreground="{DynamicResource PrimaryBrush}"
                            HorizontalContentAlignment="Left"
                            Margin="10,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="WeatherNight" Width="20" Height="20" Margin="0,0,10,0"/>
                            <TextBlock Text="Modo Oscuro"/>
                        </StackPanel>
                    </Button>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Contenido principal -->
        <Border x:Name="MainContentBorder"
                Grid.Row="1" Grid.Column="1"
                Background="{DynamicResource MaterialDesignCardBackground}"
                CornerRadius="12"
                Margin="15"
                materialDesign:ElevationAssist.Elevation="Dp6"/>

        <!-- Barra inferior -->
        <DockPanel Grid.Row="2" Grid.ColumnSpan="2"
                   Background="{DynamicResource PrimaryBrush}"
                   materialDesign:ElevationAssist.Elevation="Dp6">
            <TextBlock Text="© 2025 GGHardware | Todos los derechos reservados"
                       Foreground="{DynamicResource PrimaryForegroundBrush}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20,0"/>
        </DockPanel>
    </Grid>
</Window>
