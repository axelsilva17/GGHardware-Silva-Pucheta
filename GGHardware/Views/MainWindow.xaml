<Window x:Class="GGHardware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GGHardware" Height="393" Width="721"
        Background="#F3F4F6" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          Color="#000000"
                          Direction="270"
                          ShadowDepth="6"
                          BlurRadius="12"
                          Opacity="0.18"/>
    </Window.Resources>

    <Grid>
        <!-- Definimos el layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition/>
            <!-- Contenido -->
            <RowDefinition Height="50"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- HEADER -->
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#1F2937">
            <TextBlock Text="GGHardware - Dashboard"
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="20,0"/>
        </DockPanel>

        <!-- SIDEBAR -->
        <Border Grid.Row="1" Grid.Column="0" Background="#111827">
            <StackPanel>
                <TextBlock Text="Navegación" 
                           Foreground="#9CA3AF"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="20,20,10,10"/>

                <!-- Botones de menú -->
                <Button x:Name="btnInicio" Content="🏠  Inicio"
                        Margin="10,5"
                        Padding="10"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontSize="14"
                        HorizontalContentAlignment="Left"
                        Cursor="Hand"/>

                <Button x:Name="btnProductos" Content="📦  Productos"
                        Margin="10,5"
                        Padding="10"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontSize="14"
                        HorizontalContentAlignment="Left"
                        Cursor="Hand"/>

                <Button x:Name="btnVentas" Content="🛒  Ventas"
                        Margin="10,5"
                        Padding="10"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontSize="14"
                        HorizontalContentAlignment="Left"
                        Cursor="Hand"/>

                <Button x:Name="btnConfiguracion" Content="⚙️  Configuración"
                        Margin="10,5"
                        Padding="10"
                        Background="Transparent"
                        Foreground="White"
                        BorderBrush="Transparent"
                        FontSize="14"
                        HorizontalContentAlignment="Left"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- CONTENIDO CENTRAL -->
        <Border Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="10" Margin="15"
                BorderBrush="#E5E7EB" BorderThickness="1" 
                Effect="{StaticResource DropShadow}">
            <TextBlock Text="Aquí va el contenido dinámico"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="18"
                       Foreground="#374151"/>
        </Border>

        <!-- FOOTER -->
        <DockPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#2563EB">
            <TextBlock Text="© 2025 GGHardware | Todos los derechos reservados"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0"/>
        </DockPanel>
    </Grid>
</Window>
