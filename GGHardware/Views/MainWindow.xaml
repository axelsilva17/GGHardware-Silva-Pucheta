<Window x:Class="GGHardware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="GGHardware" Height="393" Width="721"
        Background="#F3F4F6" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                          Color="#000000"
                          Direction="270"
                          ShadowDepth="6"
                          BlurRadius="12"
                          Opacity="0.18"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Row="0" Grid.ColumnSpan="2" Background="#1F2937">
            <TextBlock Text="GGHardware - Dashboard"
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Margin="20,0"/>
        </DockPanel>

        <Border Grid.Row="1" Grid.Column="0" Background="#111827">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Cursor="Hand">
                    <TextBlock Text="Navegación" 
                               Foreground="#9CA3AF"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="20,20,10,10"/>

                    <Button x:Name="btnInicio" IsEnabled="true" Content="🏠 Inicio"
                            Margin="10,5" Padding="10" Background="Transparent" Foreground="White"
                            BorderBrush="Transparent" FontSize="14" HorizontalContentAlignment="Left"
                            Cursor="Hand" Click="btnInicio_Click"/>

                    <Button x:Name="btnProductos" IsEnabled="true" Content="📦 Productos"
                            Margin="10,5" Padding="10" Background="Transparent" Foreground="White"
                            BorderBrush="Transparent" FontSize="14" HorizontalContentAlignment="Left"
                            Cursor="Hand" Click="btnProductos_Click"/>

                    <Button x:Name="btnVentas" IsEnabled="true" Content="🛒 Ventas"
                            Margin="10,5" Padding="10" Background="Transparent" Foreground="White"
                            BorderBrush="Transparent" FontSize="14" HorizontalContentAlignment="Left"
                            Cursor="Hand" Click="btnVentas_Click"/>

                    <Button x:Name="btnConfiguracion" IsEnabled="true" Content="⚙️ Configuración"
                            Margin="10,5" Padding="10" Background="Transparent" Foreground="White"
                            BorderBrush="Transparent" FontSize="14" HorizontalContentAlignment="Left"
                            Cursor="Hand"/>

                    <Button x:Name="btnRegistro" IsEnabled="true" Content="👤 Registro"
                            Margin="10,5" Padding="10" Background="Transparent" Foreground="White"
                            BorderBrush="Transparent" FontSize="14" HorizontalContentAlignment="Left"
                            Cursor="Hand" Click="BtnRegistro_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border x:Name="MainContentBorder" Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="10" Margin="15"
                BorderBrush="#E5E7EB" BorderThickness="1" 
                Effect="{StaticResource DropShadow}"/>

        <DockPanel Grid.Row="2" Grid.ColumnSpan="2" Background="#2563EB">
            <TextBlock Text="© 2025 GGHardware | Todos los derechos reservados"
                       Foreground="White"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20,0"/>
        </DockPanel>
    </Grid>
</Window>