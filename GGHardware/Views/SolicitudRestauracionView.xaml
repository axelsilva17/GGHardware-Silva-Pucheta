<UserControl x:Class="GGHardware.Views.SolicitudRestauracionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Titulo -->
                    <TextBlock Text="Solicitar Restauracion de Base de Datos"
                               FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource MaterialDesignBody}"
                               Margin="0 0 0 20"/>

                    <!-- Formulario de solicitud -->
                    <Border Grid.Row="1" BorderBrush="{DynamicResource MaterialDesignDivider}" 
                            BorderThickness="1" CornerRadius="8" Padding="20" Margin="0 0 0 20"
                            Background="{DynamicResource MaterialDesignCardBackground}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Seleccionar Backup -->
                            <StackPanel Grid.Row="0" Margin="0 0 0 15">
                                <TextBlock Text="Seleccionar Backup:" FontWeight="Bold" Margin="0 0 0 8"/>
                                <ComboBox x:Name="cbBackups" 
                                          DisplayMemberPath="nombre_archivo"
                                          SelectedValuePath="id"
                                          ItemsSource="{Binding BackupsDisponibles}"
                                          SelectedItem="{Binding BackupSeleccionado, Mode=TwoWay}"
                                          materialDesign:HintAssist.Hint="Seleccione un backup"
                                          Height="40"
                                          Padding="10"/>
                            </StackPanel>

                            <!-- Fecha de Backup (solo lectura) -->
                            <StackPanel Grid.Row="1" Margin="0 0 0 15">
                                <TextBlock Text="Fecha del Backup:" FontWeight="Bold" Margin="0 0 0 8"/>
                                <TextBox x:Name="txtFechaBackup" 
                                         Text="{Binding FechaBackup, Mode=OneWay}"
                                         IsReadOnly="True" 
                                         Height="40"
                                         materialDesign:HintAssist.Hint="Se mostrara automaticamente"
                                         Padding="10"/>
                            </StackPanel>

                            <!-- Fecha de Restauracion deseada -->
                            <StackPanel Grid.Row="2" Margin="0 0 0 15">
                                <TextBlock Text="Fecha de Restauracion Deseada:" FontWeight="Bold" Margin="0 0 0 8"/>
                                <DatePicker x:Name="dpFechaRestauracion" 
                                            SelectedDate="{Binding FechaRestauracion, Mode=TwoWay}"
                                            Height="40" 
                                            Padding="10"/>
                            </StackPanel>

                            <!-- Motivo de la solicitud -->
                            <StackPanel Grid.Row="3" Margin="0 0 0 15">
                                <TextBlock Text="Motivo/Descripcion:" FontWeight="Bold" Margin="0 0 0 8"/>
                                <TextBox x:Name="txtMotivo" 
                                         Text="{Binding Motivo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         Height="100"
                                         materialDesign:HintAssist.Hint="Describa el motivo de la restauracion"
                                         Padding="10"/>
                            </StackPanel>

                            <!-- Mensaje de estado -->
                            <TextBlock Grid.Row="4" 
                                       Text="{Binding Mensaje}"
                                       Foreground="Red"
                                       FontWeight="Bold"
                                       TextWrapping="Wrap"
                                       Margin="0 0 0 10"/>
                        </Grid>
                    </Border>

                    <!-- Botones de accion -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button x:Name="btnEnviarSolicitud" 
                                Content="Enviar Solicitud"
                                Width="150" Height="40"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Margin="0 0 10 0"
                                Command="{Binding EnviarSolicitudCommand}"
                                Background="#4CAF50"
                                Foreground="White"/>
                        <Button x:Name="btnCancelar" 
                                Content="Cancelar"
                                Width="150" Height="40"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Click="btnCancelar_Click"/>
                    </StackPanel>

                    <!-- Listado de mis solicitudes -->
                    <Border Grid.Row="2" BorderBrush="{DynamicResource MaterialDesignDivider}" 
                            BorderThickness="1" CornerRadius="8" Padding="20" Margin="0 60 0 0"
                            Background="{DynamicResource MaterialDesignCardBackground}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Mis Solicitudes de Restauracion"
                                       FontSize="16" FontWeight="Bold"
                                       Foreground="{DynamicResource MaterialDesignBody}"
                                       Margin="0 0 0 15"/>

                            <DataGrid Grid.Row="1" 
                                      x:Name="dgMisSolicitudes" 
                                      ItemsSource="{Binding MisSolicitudes}"
                                      AutoGenerateColumns="False" 
                                      IsReadOnly="True"
                                      SelectionMode="Single" 
                                      Height="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding id_solicitud}" Width="50"/>
                                    <DataGridTextColumn Header="Archivo Backup" Binding="{Binding nombre_archivo_backup}" Width="*"/>
                                    <DataGridTextColumn Header="Fecha Solicitud" Binding="{Binding fecha_solicitud, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                                    <DataGridTextColumn Header="Estado" Binding="{Binding estado}" Width="100"/>
                                    <DataGridTextColumn Header="Gerente Asignado" Binding="{Binding nombre_gerente}" Width="150"/>
                                    <DataGridTextColumn Header="Observaciones" Binding="{Binding observaciones_gerente}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>
