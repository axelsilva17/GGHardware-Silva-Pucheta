<UserControl x:Class="GGHardware.Views.Gerente"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             Background="{DynamicResource Background}">

    <!-- SCROLL PRINCIPAL-->
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header con badge de Gerente -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="ChartBoxOutline"
                                             Width="32" Height="32"
                                             Foreground="{DynamicResource PrimaryBrush}"
                                             VerticalAlignment="Center"
                                             Margin="0,0,12,0"/>
                    <TextBlock Text="Dashboard Ejecutivo"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimary}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Border Grid.Column="1"
                        Background="{DynamicResource PrimaryBrush}"
                        CornerRadius="12"
                        Padding="12,4"
                        HorizontalAlignment="Left"
                        Margin="15,0,0,0"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ShieldCrown"
                                                 Width="16" Height="16"
                                                 Foreground="{DynamicResource PrimaryForegroundBrush}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,6,0"/>
                        <TextBlock Text="GERENTE"
                                   FontSize="11"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="btnExportarExcel"
                            Click="btnExportarExcel_Click"
                            Background="{DynamicResource PrimaryBrush}"
                            Foreground="{DynamicResource PrimaryForegroundBrush}"
                            BorderThickness="0"
                            Padding="15,8"
                            Margin="0,0,10,0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="FileExcel"
                                                                             Width="18" Height="18"
                                                                             Foreground="{TemplateBinding Foreground}"
                                                                             VerticalAlignment="Center"
                                                                             Margin="0,0,8,0"/>
                                                    <TextBlock Text="Exportar Excel"
                                                               Foreground="{TemplateBinding Foreground}"
                                                               FontWeight="Medium"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="0.85"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnActualizar"
                            Click="btnActualizar_Click"
                            Background="{DynamicResource Surface}"
                            Foreground="{DynamicResource TextPrimary}"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="1"
                            Padding="12,8"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                <materialDesign:PackIcon Kind="Refresh"
                                                                         Width="18" Height="18"
                                                                         Foreground="{TemplateBinding Foreground}"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{DynamicResource Background}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Estadísticas generales -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
                <Border Background="{DynamicResource Surface}"
                        Padding="20"
                        Margin="5"
                        CornerRadius="10"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <materialDesign:PackIcon Kind="CurrencyUsd"
                                                 Width="28" Height="28"
                                                 Foreground="{DynamicResource PrimaryBrush}"
                                                 HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="1"
                                   Text="Total Ventas"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Grid.Row="2"
                                   x:Name="txtTotalVentas"
                                   Text="$0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryBrush}"/>
                    </Grid>
                </Border>

                <!-- Reemplaza todo el Border de "Usuarios Activos" por este -->
                <Border Background="{DynamicResource Surface}"
        Padding="20"
        Margin="5"
        CornerRadius="10"
        BorderBrush="#4CAF50"
        BorderThickness="2"
        Cursor="Hand">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
                    </Border.Effect>
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding VerVendedoresCommand}"/>
                    </Border.InputBindings>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <materialDesign:PackIcon Grid.Row="0"
                                 Kind="AccountCheck"
                                 Width="28" Height="28"
                                 Foreground="#4CAF50"
                                 HorizontalAlignment="Left"/>

                        <TextBlock Grid.Row="1"
                   Text="Usuarios Activos"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource TextSecondary}"
                   Margin="0,10,0,5"/>

                        <TextBlock Grid.Row="2"
                   x:Name="txtUsuariosActivos"
                   Text="0"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#4CAF50"/>

                        <!-- BOTÓN AGREGADO AQUÍ -->
                        <Button Grid.Row="3"
                x:Name="btnVerVendedores"
                Content="Ver Rendimiento"
                Click="btnVerVendedores_Click"
                Background="#4CAF50"
                Foreground="White"
                BorderThickness="0"
                Padding="10,6"
                Margin="0,15,0,0"
                FontSize="12"
                FontWeight="SemiBold"
                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4"
                                        Padding="{TemplateBinding Padding}">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <materialDesign:PackIcon Kind="ChartBar"
                                                                 Width="14" Height="14"
                                                                 Foreground="{TemplateBinding Foreground}"
                                                                 VerticalAlignment="Center"
                                                                 Margin="0,0,6,0"/>
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.85"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource Surface}"
                        Padding="20"
                        Margin="5"
                        CornerRadius="10"
                        BorderBrush="#FF5252"
                        BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <materialDesign:PackIcon Kind="AccountOff"
                                                 Width="28" Height="28"
                                                 Foreground="#FF5252"
                                                 HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="1"
                                   Text="Usuarios Inactivos"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Grid.Row="2"
                                   x:Name="txtUsuariosInactivos"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#FF5252"/>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource Surface}"
                        Padding="20"
                        Margin="5"
                        CornerRadius="10"
                        BorderBrush="#FF9800"
                        BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <materialDesign:PackIcon Kind="AccountStar"
                                                 Width="28" Height="28"
                                                 Foreground="#FF9800"
                                                 HorizontalAlignment="Left"/>
                        <TextBlock Grid.Row="1"
                                   Text="Clientes Frecuentes"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextSecondary}"
                                   Margin="0,10,0,5"/>
                        <TextBlock Grid.Row="2"
                                   x:Name="txtClientesFrecuentes"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="#FF9800"/>
                    </Grid>
                </Border>
            </UniformGrid>

            <!-- Filtros -->
            <Border Grid.Row="2"
                    Background="{DynamicResource Surface}"
                    Padding="15"
                    Margin="0,0,0,20"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource TextSecondary}"
                    BorderThickness="1">
                <StackPanel>
                    <!-- Primera fila de filtros -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Período:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <ComboBox x:Name="cmbPeriodo"
                                  Width="150"
                                  Margin="0,0,20,0"
                                  SelectedIndex="0"
                                  SelectionChanged="cmbPeriodo_SelectionChanged">
                            <ComboBoxItem Content="Últimos 7 días"/>
                            <ComboBoxItem Content="Último mes"/>
                            <ComboBoxItem Content="Último año"/>
                            <ComboBoxItem Content="Personalizado"/>
                        </ComboBox>

                        <TextBlock Text="Categoría:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <ComboBox x:Name="cmbCategoria"
                                  Width="150"
                                  SelectedIndex="0"
                                  SelectionChanged="cmbCategoria_SelectionChanged">
                            <ComboBoxItem Content="Todas"/>
                        </ComboBox>

                        <Button x:Name="btnAplicarFiltros"
                                Content="Aplicar Filtros"
                                Click="btnAplicarFiltros_Click"
                                Background="{DynamicResource PrimaryBrush}"
                                Foreground="{DynamicResource PrimaryForegroundBrush}"
                                Margin="20,0,0,0"
                                Padding="15,5"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="4"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.85"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- Panel de fechas personalizadas (oculto por defecto) -->
                    <StackPanel x:Name="pnlFechasPersonalizadas"
                                Orientation="Horizontal"
                                Visibility="Collapsed"
                                Margin="0,10,0,0">
                        <TextBlock Text="Desde:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <DatePicker x:Name="dpFechaDesde"
                                    Width="150"
                                    Margin="0,0,20,0"/>

                        <TextBlock Text="Hasta:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimary}"/>
                        <DatePicker x:Name="dpFechaHasta"
                                    Width="150"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- DataGrid Clientes Frecuentes -->
            <Border Grid.Row="3"
                    Background="{DynamicResource Surface}"
                    Padding="15"
                    Margin="0,0,0,20"
                    CornerRadius="10"
                    BorderBrush="#FF9800"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Clientes Frecuentes"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextPrimary}"
                               Margin="0,0,0,15"/>
                    <DataGrid x:Name="dgClientesFrecuentes"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              Background="Transparent"
                              BorderThickness="0"
                              RowBackground="{DynamicResource Surface}"
                              AlternatingRowBackground="{DynamicResource Background}"
                              MaxHeight="200">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF9800"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Cliente" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Compras" Binding="{Binding TotalCompras}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total Gastado" Binding="{Binding MontoTotal}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Productos más vendidos y gráfico -->
            <Grid Grid.Row="4" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Border Background="{DynamicResource Surface}"
                        Padding="15"
                        Margin="0,0,10,0"
                        CornerRadius="10"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Top Productos Vendidos"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,15"/>
                        <DataGrid x:Name="dgProductosVendidos"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="None"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  RowBackground="{DynamicResource Surface}"
                                  AlternatingRowBackground="{DynamicResource Background}"
                                  MaxHeight="300">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="*"/>
                                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1"
                        Background="{DynamicResource Surface}"
                        Padding="15"
                        CornerRadius="10"
                        BorderBrush="{DynamicResource PrimaryBrush}"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Análisis Visual de Ventas"
                                   FontWeight="Bold"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextPrimary}"
                                   Margin="0,0,0,15"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                            <ItemsControl x:Name="icGraficoProductos">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,8" Padding="10" Background="{DynamicResource Background}" CornerRadius="6">
                                            <StackPanel>
                                                <Grid Margin="0,0,0,5">
                                                    <TextBlock Text="{Binding Nombre}"
                                                               FontWeight="SemiBold"
                                                               Foreground="{DynamicResource TextPrimary}"
                                                               HorizontalAlignment="Left"/>
                                                    <TextBlock Text="{Binding Cantidad}"
                                                               FontWeight="Bold"
                                                               Foreground="{DynamicResource PrimaryBrush}"
                                                               HorizontalAlignment="Right"/>
                                                </Grid>
                                                <ProgressBar Value="{Binding Cantidad}"
                                                             Maximum="100"
                                                             Height="18"
                                                             Foreground="{DynamicResource PrimaryBrush}"
                                                             Background="#20000000"
                                                             BorderThickness="0"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
            
        </Grid>
    </ScrollViewer>
</UserControl>