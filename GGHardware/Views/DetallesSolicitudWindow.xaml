<Window x:Class="GGHardware.Views.DetallesSolicitudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Detalles de Solicitud" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Detalles de Solicitud"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

            <TextBlock Text="{Binding nombre_supervisor, StringFormat='Supervisor: {0}'}" Margin="0 5"/>
            <TextBlock Text="{Binding nombre_archivo_backup, StringFormat='Archivo Backup: {0}'}" Margin="0 5"/>
            <TextBlock Text="{Binding fecha_backup, StringFormat='Fecha Backup: {0:dd/MM/yyyy}'}" Margin="0 5"/>
            <TextBlock Text="{Binding fecha_solicitud, StringFormat='Fecha Solicitud: {0:dd/MM/yyyy HH:mm}'}" Margin="0 5"/>
            <TextBlock Text="{Binding motivo_solicitud, StringFormat='Motivo: {0}'}" Margin="0 5"/>
            <TextBlock Text="{Binding estado, StringFormat='Estado: {0}'}" Margin="0 5"/>

            <Button Content="Cerrar"
                    Width="100"
                    Margin="0 20 0 0"
                    HorizontalAlignment="Right"
                    Click="Cerrar_Click"
                    Style="{DynamicResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
