<UserControl x:Class="GGHardware.Views.Usuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GGHardware.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Gestión de Usuarios"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#1F2937"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Border Background="White"
                        CornerRadius="5"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="DNI:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDni" Padding="5" Margin="0,0,0,10"/>

                        <TextBlock Text="Nombre:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtNombre" Padding="5" Margin="0,0,0,10"/>

                        <TextBlock Text="Apellido:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtApellido" Padding="5" Margin="0,0,0,10"/>

                        <TextBlock Text="Contraseña:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="pbContrasena" Padding="5" Margin="0,0,0,10"/>

                        <TextBlock Text="Teléfono:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTelefono" Padding="5" Margin="0,0,0,10"/>

                        <TextBlock Text="Rol:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbRol" Padding="5" Margin="0,0,0,10">
                            <ComboBoxItem Content="Cliente"/>
                            <ComboBoxItem Content="Usuario"/>
                            <ComboBoxItem Content="Supervisor"/>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <Grid/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Limpiar"
                    Width="80" Height="35"
                    FontSize="12"
                    Background="#E5E7EB" Foreground="#374151"
                    BorderBrush="Transparent" FontWeight="SemiBold"
                    Cursor="Hand" Margin="0,0,10,0"/>
            <Button Content="Guardar"
                    Width="80" Height="35"
                    FontSize="12"
                    Background="#10B981" Foreground="White"
                    BorderBrush="Transparent" FontWeight="SemiBold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</UserControl>