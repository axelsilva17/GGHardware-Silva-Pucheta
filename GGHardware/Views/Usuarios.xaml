<UserControl x:Class="GGHardware.Views.Usuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GGHardware.Views"
             mc:Ignorable="d" 
             d:DesignHeight="492.066" d:DesignWidth="782.911"
             Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="231"/>
            <RowDefinition Height="25.88"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra superior -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <Button x:Name="btnVolver"
                    Content="←"
                    FontSize="18"
                    Width="40" Height="40"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="#1F2937"
                    Cursor="Hand"
                    Click="btnVolver_Click"/>

            <TextBlock Text="Gestión de Usuarios"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="#1F2937"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
            
            
        </StackPanel>
         
        <!-- Formulario -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="5"
                Padding="20"
                Margin="0,0,0,20" Grid.RowSpan="2">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="DNI:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtDNI" Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,0,20,10" PreviewTextInput="txtDNI_PreviewTextInput"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Nombre:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,0,0,10" PreviewTextInput="txtLetras_PreviewTextInput"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Apellido:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtApellido" Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,0,20,10" PreviewTextInput="txtLetras_PreviewTextInput"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Correo:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtCorreo" Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Contraseña:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <PasswordBox x:Name="pbContrasena" Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,0,20,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Fecha Nacimiento:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <DatePicker x:Name="dpFechaNacimiento" Grid.Row="2" Grid.Column="3" Padding="5" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Rol:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <ComboBox x:Name="cmbRol" Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,0,20,10">
                        <ComboBoxItem Content="Cliente"/>
                        <ComboBoxItem Content="Usuario"/>
                        <ComboBoxItem Content="Supervisor"/>
                    </ComboBox>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Limpiar" Width="80" Height="35" 
                            FontSize="12" 
                            Background="#9CA3AF" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            FontWeight="SemiBold" 
                            Cursor="Hand" Margin="0,0,10,0"
                            Click="btnLimpiar_Click"/>
                    <Button Content="Guardar" Width="80" Height="35" 
                            FontSize="12" 
                            Background="#10B981" 
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontWeight="SemiBold" Cursor="Hand"
                            Click="btnGuardar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Tabla usuarios -->
        <Border Grid.Row="3"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <DataGrid x:Name="dgUsuarios"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding id_usuario}" Width="Auto"/>
                    <DataGridTextColumn Header="DNI" Binding="{Binding dni}" Width="Auto"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding apellido}" Width="*"/>
                    <DataGridTextColumn Header="Rol" Binding="{Binding rol}" Width="Auto"/>
                    <DataGridTextColumn Header="Activo" Binding="{Binding Activo}" Width="Auto"/>

                    <!-- Acciones -->
                    <DataGridTemplateColumn Header="Acciones" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Editar -->
                                     <Button Content="✏ Editar"
                                                    Click="btnEditar_Click"
                                                    Background="LightBlue"
                                                    Margin="2"
                                                    Padding="4"/>

                                    <!-- Activar / Desactivar -->
                                    <Button x:Name="btnActivarDesactivar"
                                            Click="btnActivarDesactivar_Click"
                                            Foreground="White"
                                            BorderBrush="Transparent"
                                            Padding="5">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <!-- Por defecto -->
                                                <Setter Property="Content" Value="Desactivar"/>
                                                <Setter Property="Background" Value="#EF4444"/>
                                                <!-- rojo -->
                                                <Style.Triggers>
                                                    <!-- Si Activo = false, cambiar a verde -->
                                                    <DataTrigger Binding="{Binding Activo}" Value="False">
                                                        <Setter Property="Content" Value="Activar"/>
                                                        <Setter Property="Background" Value="#10B981"/>
                                                        <!-- verde -->
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
