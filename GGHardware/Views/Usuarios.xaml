<UserControl x:Class="GGHardware.Views.Usuarios"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GGHardware.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Gestión de Usuarios"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#1F2937"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="5"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="DNI:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtDNI" Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,0,20,10"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Nombre:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Apellido:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtApellido" Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,0,20,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Correo:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <TextBox x:Name="txtCorreo" Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Contraseña:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <PasswordBox x:Name="pbContrasena" Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,0,20,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Fecha Nacimiento:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <DatePicker x:Name="dpFechaNacimiento" Grid.Row="2" Grid.Column="3" Padding="5" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Rol:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,10"/>
                    <ComboBox x:Name="cmbRol" Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,0,20,10">
                        <ComboBoxItem Content="Cliente"/>
                        <ComboBoxItem Content="Usuario"/>
                        <ComboBoxItem Content="Supervisor"/>
                    </ComboBox>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Limpiar" Width="80" Height="35" 
                            FontSize="12" 
                            Background="#9CA3AF" 
                            Foreground="White" 
                            BorderBrush="Transparent"
                            FontWeight="SemiBold" 
                            Cursor="Hand" Margin="0,0,10,0"
                            Click="btnLimpiar_Click"/>
                    <Button Content="Guardar" Width="80" Height="35" 
                            FontSize="12" 
                            Background="#10B981" 
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontWeight="SemiBold" Cursor="Hand"
                            Click="btnGuardar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <DataGrid x:Name="dgUsuarios"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding id_usuario}" Width="Auto"/>
                    <DataGridTextColumn Header="DNI" Binding="{Binding DNI}" Width="Auto"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*"/>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding apellido}" Width="*"/>
                    <DataGridTextColumn Header="Rol" Binding="{Binding rol}" Width="Auto"/>
                    <DataGridTemplateColumn Header="Acciones" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Editar" Background="#2563EB" Foreground="White" 
                                            BorderBrush="Transparent" Padding="5" Margin="0,0,5,0"/>
                                    <Button Content="Eliminar" Background="#EF4444" Foreground="White" 
                                            BorderBrush="Transparent" Padding="5"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>