<UserControl x:Class="GGHardware.Views.AltaProducto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             Background="{DynamicResource MaterialDesignPaper}" 
             d:DesignWidth="600" Height="779">

    <!-- Scroll para pantallas chicas -->
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Titulo -->
            <TextBlock Text="Alta de Producto"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0 0 0 20"
                       HorizontalAlignment="Center"/>

            <!-- Formulario -->
            <StackPanel Margin="20" VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock Text="Nombre:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNombre" Height="30" Width="300" Margin="0,0,0,10"/>

                <TextBlock Text="Precio Costo:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPrecioCosto" Height="30" Width="300" Margin="0,0,0,10"/>

                <TextBlock Text="Precio Venta:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtPrecioVenta" Height="30" Width="300" Margin="0,0,0,10"/>

                <TextBlock Text="Descripcion:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDescripcion" Height="60" Width="300" Margin="0,0,0,10" AcceptsReturn="True"/>

                <TextBlock Text="Stock:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtStock" Height="30" Width="300" Margin="0,0,0,10"/>

                <TextBlock Text="Stock Minimo:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtStockMin" Height="30" Width="300" Margin="0,0,0,10"/>

                <TextBlock Text="Codigo de Barras:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtCodigoBarras" Height="30" Width="300" Margin="0,0,0,10"/>

                <TextBlock Text="Codigo Interno:" Margin="0,0,0,5"/>
                <TextBox x:Name="txtCodigoInterno" Height="30" Width="300" Margin="0,0,0,10"/>

                <TextBlock Text="Categoria:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbCategoria"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="id_categoria"
                          Height="30" Width="300" Margin="0,0,0,20"/>

                <TextBlock Text="Proveedor:" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbProveedor"
                          DisplayMemberPath="nombre"
                          SelectedValuePath="NombreProveedor"
                          Height="30" Width="300" Margin="0,0,0,10"/>
            </StackPanel>

            <!-- Botones -->
            <UniformGrid Grid.Row="2"
                         Rows="1"
                         Columns="3"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"
                         RenderTransformOrigin="0.386,0.604">
                <Button x:Name="btnVolver"
                        Content="Volver"
                        Width="100"
                        Click="btnVolver_Click"/>
                <Button x:Name="btnGuardar"
                        Content="Guardar"
                        Width="100"
                        Margin="5,0,5,0"
                        Click="btnGuardar_Click"/>
                <Button x:Name="btnLimpiar"
                        Content="Limpiar"
                        Width="100"
                        Click="btnLimpiar_Click"/>
            </UniformGrid>
        </Grid>
    </ScrollViewer>
</UserControl>
