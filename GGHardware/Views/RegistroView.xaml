<UserControl x:Class="GGHardware.Views.RegistroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{DynamicResource PrimaryBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Center"
                    Margin="0,40,0,0">
            <TextBlock Text="¡Bienvenido a GGHardware!"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="{DynamicResource PrimaryForegroundBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Selecciona una opción para continuar"
                       FontSize="18"
                       Foreground="{DynamicResource PrimaryForegroundBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <Button x:Name="btnRegistrarCliente"
                    Content="Registrar Cliente"
                    Width="220" Height="60"
                    FontSize="16"
                    Style="{DynamicResource MaterialDesignRaisedLightButton}"
                    Background="{DynamicResource PrimaryForegroundBrush}"
                    Foreground="{DynamicResource PrimaryBrush}"
                    materialDesign:ButtonAssist.CornerRadius="8"
                    materialDesign:ElevationAssist.Elevation="Dp3"
                    Margin="0,0,30,0"
                    Click="btnRegistrarCliente_Click"/>
            <Button x:Name="btnRegistrarUsuario" 
                    Content="Registrar Usuario"
                    Width="220" Height="60"
                    FontSize="16"
                    Style="{DynamicResource MaterialDesignRaisedLightButton}"
                    Background="{DynamicResource PrimaryForegroundBrush}"
                    Foreground="{DynamicResource PrimaryBrush}"
                    materialDesign:ButtonAssist.CornerRadius="8"
                    materialDesign:ElevationAssist.Elevation="Dp3"
                    Click="btnRegistrarUsuario_Click"/>
        </StackPanel>
    </Grid>
</UserControl>