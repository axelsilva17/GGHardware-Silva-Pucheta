<UserControl x:Class="GGHardware.Views.InicioView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="400"
             d:DesignWidth="500"
             Background="{DynamicResource MaterialDesignPaper}">


    <Viewbox Stretch="Uniform">
        <Grid Width="500" Height="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <StackPanel Grid.Row="0" Margin="10" HorizontalAlignment="Center">
                <TextBlock Text="GGHardware" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource MaterialDesignBody}" TextAlignment="Center"/>
                <TextBlock Text="Tu tienda de hardware de confianza" FontSize="16" Foreground="{DynamicResource MaterialDesignBody}" TextAlignment="Center"/>
            </StackPanel>

            <!-- Card Login (usa MiCardStyle, sin CornerRadius ni Elevation) -->
            <!-- Reemplazo del Card por Border para poder usar CornerRadius -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <Border Background="{DynamicResource MaterialDesignCardBackground}" CornerRadius="8" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBox x:Name="txtCorreo" Margin="0,0,0,10"
                     materialDesign:HintAssist.Hint="Usuario o Correo"
                     Style="{DynamicResource MaterialDesignOutlinedTextBox}"/>
                        <PasswordBox x:Name="pbContrasena" Margin="0,0,0,20"
                         materialDesign:HintAssist.Hint="Contrasenia"
                         Style="{DynamicResource MaterialDesignOutlinedPasswordBox}"/>
                        <Button Content="Iniciar Sesion" Style="{DynamicResource MaterialDesignRaisedButton}" Click="BtnInicioSesion_Click"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Footer -->
            <TextBlock Grid.Row="2" Text="2025 GGHardware" HorizontalAlignment="Center" Margin="10" Foreground="{DynamicResource MaterialDesignBody}"/>
        </Grid>
    </Viewbox>
</UserControl>
