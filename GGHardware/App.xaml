<Application x:Class="GGHardware.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:GGHardware.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Material Design Theme con colores azules -->
                <materialDesign:BundledTheme BaseTheme="Light" 
                                           PrimaryColor="Blue" 
                                           SecondaryColor="LightBlue" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            

            <!-- 🎨 RECURSOS ESTÁTICOS DE COLORES -->

            <!-- MODO CLARO - Celestes con texto negro -->
            <SolidColorBrush x:Key="PrimaryBrushLight" Color="#0097A7"/>
            <SolidColorBrush x:Key="PrimaryForegroundBrushLight" Color="White"/>
            <SolidColorBrush x:Key="BackgroundLight" Color="#F8FAFB"/>
            <SolidColorBrush x:Key="SurfaceLight" Color="White"/>
            <SolidColorBrush x:Key="TextPrimaryLight" Color="#212121"/>
            <SolidColorBrush x:Key="TextSecondaryLight" Color="#757575"/>

            <!-- MODO OSCURO - Azules con texto blanco -->
            <SolidColorBrush x:Key="PrimaryBrushDark" Color="#1565C0"/>
            <SolidColorBrush x:Key="PrimaryForegroundBrushDark" Color="White"/>
            <SolidColorBrush x:Key="BackgroundDark" Color="#121212"/>
            <SolidColorBrush x:Key="SurfaceDark" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="TextPrimaryDark" Color="White"/>
            <SolidColorBrush x:Key="TextSecondaryDark" Color="#B0B0B0"/>

            <!-- 🎛️ RECURSOS DINÁMICOS INICIALES (Modo Claro por defecto) -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#0097A7"/>
            <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="White"/>
            <SolidColorBrush x:Key="Background" Color="#F8FAFB"/>
            <SolidColorBrush x:Key="Surface" Color="White"/>
            <SolidColorBrush x:Key="TextPrimary" Color="#212121"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#757575"/>

            <!-- SOBRESCRIBIR RECURSOS DE MATERIAL DESIGN -->
            <SolidColorBrush x:Key="MaterialDesignBackground" Color="#F8FAFB"/>
            <SolidColorBrush x:Key="MaterialDesignCardBackground" Color="White"/>
            <SolidColorBrush x:Key="MaterialDesignBodyMediumBrush" Color="#212121"/>
            <SolidColorBrush x:Key="MaterialDesignPaper" Color="White"/>
            <SolidColorBrush x:Key="MaterialDesignDataGridRowHoverBackground" Color="#E0F7FA"/>

            <Style x:Key="MenuButtonStyle" TargetType="Button">
                <Setter Property="Margin" Value="8,2"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Height" Value="48"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">
                                <ContentPresenter x:Name="contentPresenter"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                    <!-- Aplicar color específicamente al ContentPresenter -->
                                    <Setter TargetName="contentPresenter" Property="TextBlock.Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                    <Setter TargetName="contentPresenter" Property="TextBlock.Foreground" Value="{DynamicResource PrimaryForegroundBrush}"/>
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <!-- ESTILO PARA MATERIAL DESIGN DATAGRIDS -->
            <Style x:Key="MaterialDesignDataGrid" TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
                <Setter Property="Background" Value="{DynamicResource Surface}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource TextSecondary}"/>
            </Style>
            <!-- Estilos corregidos para ScrollBar - Agregar en tu App.xaml -->

            <!-- ESTILO PERSONALIZADO PARA SCROLLVIEWER -->
            <Style TargetType="ScrollBar" x:Key="{x:Type ScrollBar}">
                <Setter Property="Background" Value="{DynamicResource Surface}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Width" Value="12"/>
                <Setter Property="MinWidth" Value="12"/>
            </Style>

            <!-- Estilo global para ScrollViewer -->
            <Style TargetType="ScrollViewer" x:Key="{x:Type ScrollViewer}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollViewer">
                            <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>

                                    <ScrollBar Name="PART_VerticalScrollBar"
                                 Grid.Column="1" Grid.Row="0"
                                 Value="{TemplateBinding VerticalOffset}"
                                 Maximum="{TemplateBinding ScrollableHeight}"
                                 ViewportSize="{TemplateBinding ViewportHeight}"
                                 Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                 Background="{DynamicResource Surface}"
                                 Width="8"/>

                                    <ScrollBar Name="PART_HorizontalScrollBar"
                                 Grid.Column="0" Grid.Row="1"
                                 Orientation="Horizontal"
                                 Value="{TemplateBinding HorizontalOffset}"
                                 Maximum="{TemplateBinding ScrollableWidth}"
                                 ViewportSize="{TemplateBinding ViewportWidth}"
                                 Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                 Background="{DynamicResource Surface}"
                                 Height="8"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>